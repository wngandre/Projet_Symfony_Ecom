{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="register-container">

    <h1 class="register-title">Register</h1>
    {% if form_errors(registrationForm) %}
        <div class="form-errors">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
        <div class="form-group">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                'attr': {'class': 'form-input'}
            }) }}
        </div>

        {# Uncomment if terms agreement is required #}
        {# 
        <div class="form-group">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        </div>
        #}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}